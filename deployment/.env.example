# Legal Dashboard Service - Environment Configuration
# Copy this file to .env and update the values for your deployment

# ===== PostgreSQL Configuration (External Database) =====
POSTGRES_HOST=
POSTGRES_PORT=
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=

# ===== MongoDB Configuration =====
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DB=legal_dashboard
MONGO_USERNAME=admin

# Security - Update these passwords for production!
MONGO_ROOT_PASSWORD=change_this_secure_password_123
MONGO_EXPRESS_PASSWORD=change_this_express_password_456

# ===== Application Configuration =====
SYNC_HOURS=24
ENVIRONMENT=production

# ===== Reflex Configuration =====
REFLEX_BACKEND_HOST=0.0.0.0
REFLEX_FRONTEND_PORT=3000
REFLEX_BACKEND_PORT=8000

# ===== Security Settings =====
# Set to true in production
MONGO_AUTH_ENABLED=true

# ===== Logging =====
LOG_LEVEL=INFO